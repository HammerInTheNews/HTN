body { padding-top: 40px;
       background-image: url(<%= asset_path 'mochaGrunge.png' %>);
       font-family: 'PT Serif', serif; font-weight: 575
}

.banner {
    margin: 0 auto; /* This is what centers it */
    max-width: 1000px;
    width: 99%;

}

h1.headline { font-family: 'PT Sans Narrow', sans-serif; text-shadow: 1px 1px 1px #ccc;
}
h2.headline { font-family: 'PT Sans Narrow', sans-serif; text-shadow: 1px 1px 1px #ccc;
}
h2.headline.smaller-font { font-family: 'PT Sans Narrow', sans-serif; text-shadow: 1px 1px 1px #ccc;
              font-size: 20px; line-height:100%;
}

h1.headline a { color: black;} 
h2.headline a { color: black;} 
.subheadline { font-family: 'PT Sans', sans-serif; font-weight: 900; color: black;}

div.span4.show-sidebar {
    background-color: white;
    padding: 2%;    
}

div.span6.show {
    background-color: white;
    padding: 2%;
}

p { font-family: 'PT Serif', serif; font-weight: 575; }

/*This removes the image from the body text from displaying in the index view.*/
div.image-remove img  {
   position: absolute !important;
   top: -9999px !important;
   left: -9999px !important;

}
div.span8.wide-column.main-posts {

 }



.top-post {
    -webkit-box-shadow: 0px 0.5px 4px rgba(50, 50, 50, 0.46);
    -moz-box-shadow:    0px 0.5px 4px rgba(50, 50, 50, 0.46);
    box-shadow:         0px 0.5px 4px rgba(50, 50, 50, 0.46);
    padding-left: 5%;
    padding-right: 5%; 
    padding-top: 2%;
    padding-bottom: 2%;             
    margin: 2%;
}

.container-fluid {
    margin-right: 10%;
    margin-left:  10%; 
}

.box-around-all-articles {

    border:solid 2.5px #b0a7b0;
    -moz-border-radius-topleft: 0px;
    -moz-border-radius-topright:3px;
    -moz-border-radius-bottomleft:3px;
    -moz-border-radius-bottomright:0px;
    -webkit-border-top-left-radius:0px;
    -webkit-border-top-right-radius:3px;
    -webkit-border-bottom-left-radius:3px;
    -webkit-border-bottom-right-radius:0px;
    border-top-left-radius:0px;
    border-top-right-radius:3px;
    border-bottom-left-radius:3px;
    border-bottom-right-radius:0px;
    background-color: white;
}

.post {

    border-top-width: 4px;
    border-top-style: double;
    border-top-color: gray;
    padding: 8px 0px;
    padding-left: 20px;
}

.post:nth-child(2) {

    border-top-width: 4px;
    border-top-style: double;
    border-top-color: gray;
    padding: 8px 0px;
    padding-left: 25px;
}
.small-post:nth-child(2) {
        margin-left: 14px;
        padding-left: 14px;
        border-left: solid 1px;
        border-top: none;
        padding-top: 0;
    }



.preview img {
	width: 2px;
}

.article {
	width: 32%;
}
#footer-spacer {
    height: 36px;
}

.floatLeft { 
    float: left; 
    margin: 4px;
    border: 1px solid #bdbdbd;
    padding: 2px;
    background-color: #EFEECB;
}

.headline-photo {
    border: 1px solid #bdbdbd;
    padding: 2px;
    background-color: #EFEECB;
 
}

footer { 
	
    height: 220px;
    -webkit-border-radius: 50px;
    -moz-border-radius: 50px;
    border-radius: 50px;



} 
.sub_twit div { padding-left: 20px;  0 50% no-repeat; } 

#footer{
