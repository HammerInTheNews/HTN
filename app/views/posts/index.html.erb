      <!-- Example row of columns -->
      <% @posts.each do |post| %>


      <div class="row">
        <div class="span3">
          <h2 class="headline"><%= link_to post.title, post %></h2>
            
              <p class= "pull-left"><%= raw truncate post.body, length: 360 %>
