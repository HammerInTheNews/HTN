<div class="container box-around-all-articles">
      
  <div class="row">
      <!-- This is the main story section -->
    <div class="span8 wide-column main-posts">
        
      <div class="top-post">
     
        <% post = @posts.shift %>

        <% if post %>
          <h1 class="headline"><%= link_to post.title, post %></h1>
          <div class="floatLeft"><%= link_to (image_tag post.image.url(:large)), post_path(post) %></div>
          <!-- <div>Tags: <%#= raw post.tag_list.map { |tag| link_to tag, tag_path(tag) }.join(', ') %></div> -->

          <p>
            <div class="image-remove"><%= truncate_html(post.body, length: 700).html_safe %></div>
            <%= link_to "read more", post %>
             |||
                <%= link_to "Leave a comment",
                   post_path(  post, :anchor => "disqus_thread"),
                  :"data-disqus-identifer" =>   post.id %>
          </p>
        <% else %>
          <h2 class="headline">Nothing to see here.</h2>

        <% end %>
      </div>

      <div class="other-posts">
      <!--This iterates through the posts -->
      <% @posts.each_with_index do |post, i| %>
        <% if i % 2 == 0 %>
          </div>
          <div class='row'>
        <% end %>
          <!--This is the smaller post section-->
        <div class="span4 small-post">
          <div class="post">
            <h2 class="headline smaller-font"><%= link_to post.title, post %></h2>
            <p>Tags: <%= raw post.tag_list.map { |tag| link_to tag, tag_path(tag) }.join(', ') %></p>
              
            <div class="floatLeft"><%= link_to (image_tag post.image.url(:thumb)), post_path(post) %></div>
            
            <div class="image-remove"><%= truncate_html(post.body, length: 70).html_safe %>
            <%= link_to "read more", post %> |||
            <%= link_to "Leave a comment",
               post_path(  post, :anchor => "disqus_thread"),
              :"data-disqus-identifer" =>   post.id %></div>
              
          </div>  
        </div> 
      <% end %>
    </div>
  </div>
