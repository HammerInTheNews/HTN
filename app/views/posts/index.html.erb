    <div id="myCarousel" class="carousel slide">
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>
    <!-- Carousel items -->
    <div class="carousel-inner">
        <div class="active item"><img src="http://hammeringthenews.files.wordpress.com/2013/02/mayor_on_wings.jpg" alt="Bob Bratina" /></div>
        <div class="item"><img src="http://hammeringthenews.files.wordpress.com/2013/02/mount_rushmore_hamilton6.jpg" alt="Mount Rushmore Hamilton" /></div>
        <div class="item"><img src="http://hammeringthenews.files.wordpress.com/2013/03/unicorn_cupcake.jpg" alt="Hatecakes" /></div>
    </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>

      <!-- Example row of columns -->
      <% @posts.each do |post| %>


      <div class="row">
        <div class="span4">
          <h2 class="headline"><%=post.title %></h2>
            <div class="media">
              <a class="pull-left" href="#">
                <img class="media-object" src="http://placehold.it/64x64">
              </a>
              <div class="media-body">
                <p class= "pull-left"><%= raw truncate post.body, length: 360 %>
                <%= link_to "read more", post %>
                <%= render post.comments %></p>
              </div>
            
          </div>
       </div> 
      <% end %>
      
      <hr>
      
          <h2 class="btn btn-large disabled"><%= link_to "New Post", new_post_path %></h2>
        
      <hr>
<!-- Example row of columns -->

      </div>
    

